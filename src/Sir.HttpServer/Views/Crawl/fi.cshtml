@{
    Layout = "~/Views/_Layout.cshtml";
}
@{ 
    var searchLink = $"{Context.Request.Path.Value.ToLower().Replace("/crawl", "/search")}{Context.Request.QueryString}";
}
    <form action="/crawl/" method="post">
        <div class="blog-wrapper">
            <h2>Choose between four different ways to crawl <a href="@searchLink">your result</a>:</h2>
            <p>
                <label><input type="radio" name="job" value="fi" /> <strong>Fetch WARC files and index</strong> their content.</label>
            </p>
            <p>
                <label><input type="radio" name="job" value="ei" /> <strong>Extract from WARC files and index</strong> those resources referenced in your result.</label>
            </p>
            <p>
                <label><input type="radio" name="job" value="wci" /> <strong>Web crawl and index</strong> those resources referenced in your result.</label>
            </p>
            <p>
                <label><input type="radio" name="job" value="wcir" /> <strong>Recurringly web crawl and index</strong> those resources referenced in your result.</label>
            </p>
            <p>
                We offer to create and host a searchable document collection with the data we collect during the crawl.
            </p>
            <p>
                Name your collection wisely.
                You will need to reference your collection by name when reading, querying and writing to it.
            </p>
            <p><input type="text" placeholder="Name your collection" name="collection" /><input type="submit" /></p>
            <h3>Read/write instructions</h3>
            <p><h4>Read with browser</h4> HTTP GET text/html<br /> <span>crawlcrawler.com/?collection=[Your_Collection]</span></p>
            <p><h4>Read with any HTTP client</h4> HTTP GET application/json <br /><span>crawlcrawler.com/query?collection=[Your_Collection]&q=[Your_Query]&field=title&field=description</span></p>
            <p><h4>Write with any HTTP client</h4> HTTP POST application/json (list of JSON documents)<br /><span>crawlcrawler.com/write?collection=[Your_Collection]</span></p>
            <h4>Advanced querying</h4>
            HTTP POST application/json<br />
            <span>crawlcrawler.com/query?collection=[Your_Collection]</span>
            <div class="pre">
                <pre>
{
	"and":
	{
		"collection": "film,music",
		"title": "rocky eye of the tiger",
		"or":
		{
			"title": "rambo",
			"or": 
			{
				"title": "cobra"
				"or":
				{
					"cast": "antonio banderas"
				}			
			}	
		},
		"and":
		{
			"year": 1980,
			"operator": "gt"
		},
		"not":
		{
			"title": "first blood"
		}
	}
}
                </pre>
            </div>
        </div>
    </form>